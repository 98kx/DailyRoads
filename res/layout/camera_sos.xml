<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vGroupMain"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/vGroupEmergency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:visibility="visible" >

        <Button
            android:id="@+id/buttonCancel"
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:layout_margin="10.0dip"
            android:background="#7affffff"
            android:drawableBottom="@drawable/ic_big_cancel"
            android:onClick="cancel"
            android:padding="5.0dip"
            android:textSize="20.0dip" />

        <Button
            android:id="@+id/buttonCall"
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:layout_margin="10.0dip"
            android:background="#7affffff"
            android:drawableBottom="@drawable/ic_big_call"
            android:ellipsize="start"
            android:onClick="call"
            android:padding="5.0dip"
            android:textSize="20.0dip" />

        <Button
            android:id="@+id/buttonMessage"
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:layout_margin="10.0dip"
            android:background="#7affffff"
            android:drawableBottom="@drawable/ic_big_message"
            android:ellipsize="start"
            android:onClick="sendMessage"
            android:padding="5.0dip"
            android:textSize="20.0dip" />
    </LinearLayout>

</RelativeLayout>