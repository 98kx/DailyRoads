<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/control_bar"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:layout_gravity="bottom"
    android:background="@drawable/ctl_bg" 
    android:gravity="center_horizontal"
    android:orientation="vertical" >

        <ImageView
        android:id="@+id/setting_panel_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10.0dip" 
           android:layout_marginLeft="5.0dip"
        android:layout_marginRight="5.0dip"
        android:clickable="true"
        android:focusable="true"
        android:onClick="menuClick"
        android:src="@drawable/ctl_btn_menu_n" />


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
           android:layout_marginLeft="5.0dip"
        android:layout_marginRight="5.0dip"
        android:gravity="center" >

        
        <ImageView
            android:id="@+id/shutter_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/shutter_bg"
            android:clickable="true"
            android:focusable="true"
            android:onClick="shutter_onClick"
            android:scaleType="center" />

        <ImageView
            android:id="@+id/video_button_icon"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:scaleType="center"
            android:src="@drawable/btn_ic_video_record" />
        
<!--         0909修改 -->
 

        <ImageView
            android:id="@+id/camera_button_icon"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:scaleType="center"
            android:src="@drawable/ctl_btn_shutter_camera"
            android:visibility="gone" />
    </FrameLayout>

    <ImageView
        android:id="@+id/review_icon"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:layout_marginBottom="10.0dip"
         android:layout_marginLeft="5.0dip"
        android:layout_marginRight="5.0dip"
        android:background="@drawable/ctl_btn_review_frame"
        android:clickable="true"
        android:focusable="true"
        android:onClick="review_iconClick"
        android:gravity="center_vertical"
        android:paddingBottom="5.0px"
        android:paddingLeft="10.0dp"
        android:paddingRight="10.0dp"
        android:paddingTop="5.0px"
        android:scaleType="center" />

</LinearLayout>